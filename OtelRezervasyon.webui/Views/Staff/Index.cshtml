@model List<StaffViewModel>

@{
    Layout = "_AdminLayout";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Personel Adı</th>
        <th>Personel Ünvanı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td><a asp-controller="Staff" asp-action="DeleteStaff" asp-route-id="@item.Id" class="btn  mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a asp-controller="Staff" asp-action="UpdateStaff" asp-route-id="@item.Id" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            <td><a class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>
<a asp-controller="Staff" asp-action="AddStaff" class="btn mb-1 btn-rounded btn-outline-info"> Yeni Personel</a>