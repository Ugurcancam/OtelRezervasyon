@model List<TestimonialViewModel>

@{
    Layout = "_AdminLayout";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Referans Adı</th>
        <th>Referans Ünvanı</th>
        <th>Referans Başlık</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detay</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Title</td>
            <td>@item.Image</td>
            <td><a asp-controller="Testimonial" asp-action="DeleteTestimonial" asp-route-id="@item.Id" class="btn  mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a asp-controller="Testimonial" asp-action="UpdateTestimonial" asp-route-id="@item.Id" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            <td><a class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>
<a asp-controller="Testimonial" asp-action="AddTestimonial" class="btn mb-1 btn-rounded btn-outline-info"> Yeni Personel</a>